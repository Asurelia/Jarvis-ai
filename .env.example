# ðŸ¤– JARVIS Configuration Environment
# Copiez ce fichier vers .env et modifiez selon vos besoins

# === API Configuration ===
API_HOST=127.0.0.1
API_PORT=8000
API_RELOAD=false
API_WORKERS=1

# === WebSocket Configuration ===
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10
WS_MAX_CONNECTIONS=100

# === React UI Configuration ===
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws
UI_DEV_PORT=3000

# === Logging Configuration ===
LOG_LEVEL=INFO
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/jarvis.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days
LOG_FORMAT="{time:YYYY-MM-DD HH:mm:ss} | {level:<8} | {name}:{function}:{line} - {message}"

# === Memory System ===
MEMORY_PERSIST_DIR=memory
MEMORY_AUTO_CLEANUP=true
MEMORY_CLEANUP_INTERVAL_HOURS=24
MEMORY_MAX_AGE_DAYS=30
MEMORY_IMPORTANCE_THRESHOLD=0.2
MEMORY_MAX_ENTRIES_PER_CATEGORY=10000

# === Voice Interface ===
VOICE_ENABLED=true
VOICE_DEFAULT_LANGUAGE=fr-FR
VOICE_DEFAULT_VOICE=fr-FR-DeniseNeural
VOICE_SPEECH_RATE=1.0
VOICE_SPEECH_VOLUME=1.0

# === Autocomplete System ===
AUTOCOMPLETE_ENABLED=true
AUTOCOMPLETE_MAX_SUGGESTIONS=5
AUTOCOMPLETE_CACHE_SIZE=1000
AUTOCOMPLETE_MIN_WORD_LENGTH=2

# === AI Models Configuration ===
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3.2:3b
OLLAMA_VISION_MODEL=llava:7b
OLLAMA_CODING_MODEL=deepseek-coder:6.7b
OLLAMA_TIMEOUT=30

# === Security Configuration ===
SANDBOX_MODE=true
SAFE_MODE=true
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# === Performance ===
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30
CACHE_TTL=300
ASYNC_WORKERS=4

# === Development ===
DEBUG_MODE=false
DEV_MODE=false
HOT_RELOAD=false
PROFILING_ENABLED=false

# === System Integration ===
AUTO_START_BROWSER=true
ELECTRON_ENABLED=true
SYSTEM_TRAY=true
AUTO_UPDATE_CHECK=true

# === Monitoring ===
HEALTH_CHECK_INTERVAL=60
METRICS_ENABLED=true
TELEMETRY_ENABLED=false
ERROR_REPORTING=true

# === Database ===
CHROMA_PERSIST_DIRECTORY=./memory/chroma
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_CACHE_SIZE=1000

# === UI Theming ===
UI_THEME=dark
UI_ACCENT_COLOR=blue
UI_ANIMATIONS=true
UI_NOTIFICATIONS=true